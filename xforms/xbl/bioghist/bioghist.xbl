<xbl:xbl xmlns="http://www.w3.org/1999/xhtml" xmlns:xforms="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xxforms="http://orbeon.org/oxf/xml/xforms"
	xmlns:xbl="http://www.w3.org/ns/xbl" xmlns:xxbl="http://orbeon.org/oxf/xml/xbl" xmlns:eaditor="https://github.com/ewg118/eaditor" xmlns:ead="urn:isbn:1-931666-22-9">
	<xbl:binding id="eaditor-bioghist" element="eaditor|bioghist">
		<xbl:template>
			<xforms:group xbl:attr="model context ref bind" xxbl:scope="outer">
				<xbl:content includes="xforms|label,xforms|help,xforms|hint,xforms|alert"/>
				<xforms:group xxbl:scope="inner">
					<xforms:var name="binding" as="node()?">
						<xxforms:sequence select="." xxbl:scope="outer"/>
					</xforms:var>
					<!--<xbl:content includes="xforms|label,xforms|help,xforms|hint,xforms|alert"/>-->
						
					<xforms:group ref="$binding">
						<div class="subsection">
							<h3>Biography/History</h3>
							<xforms:group ref=".[ancestor::ead:c]">
								<xforms:trigger appearance="minimal">
									<xforms:label>
										<span class="glyphicon glyphicon-remove"/>
									</xforms:label>
									<xforms:dispatch target="delete-dialog" name="fr-show" ev:event="DOMActivate"/>
								</xforms:trigger>
							</xforms:group>
							
							<!-- include generic triggers -->
							<eaditor:generic-elements ref="."/>
							
							<xforms:group
								ref="$binding[count(child::node()) &lt; 1]">
								<div class="bg-danger alert-box"><span class="glyphicon glyphicon-exclamation-sign"></span><strong>Alert:</strong> Element must contain content.</div>
							</xforms:group>
							
							<xforms:group ref="ead:head">
								<eaditor:head/>
							</xforms:group>
							
							<xforms:repeat nodeset="ead:address">
								<eaditor:address/>
							</xforms:repeat>
							
							<xforms:repeat nodeset="ead:blockquote">
								<eaditor:blockquote/>
							</xforms:repeat>
							
							<xforms:repeat nodeset="ead:chronlist">
								<eaditor:chronlist/>
							</xforms:repeat>
							
							<xforms:repeat nodeset="ead:list">
								<eaditor:list/>
							</xforms:repeat>
							
							<xforms:repeat nodeset="ead:note">
								<eaditor:note/>
							</xforms:repeat>
							
							<xforms:repeat nodeset="ead:p">
								<eaditor:p/>
							</xforms:repeat>
							
							<xforms:repeat nodeset="ead:table">
								<eaditor:table/>
							</xforms:repeat>
							<fr:alert-dialog id="delete-dialog" xmlns:fr="http://orbeon.org/oxf/xml/form-runner">
								<fr:label>Delete Element</fr:label>
								<fr:message>Are you sure you want to delete this element?</fr:message>
								<fr:negative-choice>
									<fr:label>No</fr:label>
								</fr:negative-choice>
								<fr:positive-choice>
									<fr:label>Yes</fr:label>
									<xforms:delete ev:event="DOMActivate" nodeset="$binding"/>
								</fr:positive-choice>
							</fr:alert-dialog>
						</div>
					</xforms:group>			
				</xforms:group>
			</xforms:group>
		</xbl:template>
	</xbl:binding>

</xbl:xbl>
